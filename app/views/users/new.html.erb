<%= form_for(@user) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email_address %>
  <%= f.text_field :email_address %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Submit' %>
<% end %>
